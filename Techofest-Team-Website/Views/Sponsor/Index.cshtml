@model IEnumerable<Techonefest_Team_Website.Models.Sponsor>

@{
    ViewData["Title"] = "Sponsorlarımız";
}

<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">@ViewData["Title"]</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Bize destek olan değerli sponsorlarımız</p>
            <div class="w-24 h-1 bg-primary mx-auto mt-4"></div>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            @foreach (var sponsor in Model)
            {
                <div class="bg-gray-50 rounded-lg p-6 flex flex-col items-center hover:shadow-md transition duration-300">
                    <div class="h-32 flex items-center justify-center mb-4">
                        <img src="@sponsor.LogoPath" alt="@sponsor.Name" class="max-h-full max-w-full object-contain">
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2 text-center">@sponsor.Name</h3>
                    <a href="@sponsor.Url" target="_blank" 
                       class="mt-auto inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary hover:bg-secondary">
                        Web Sitesi
                        <svg xmlns="http://www.w3.org/2000/svg" class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                    </a>
                </div>
            }
        </div>
    </div>
</section>