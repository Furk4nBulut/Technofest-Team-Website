@model Techonefest_Team_Website.Models.Sponsor

@{
    ViewData["Title"] = "Sponsor Düzenle";
}

<h1>Sponsor Düzenle</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label>İsim</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Logo Yolu</label>
        <input asp-for="LogoPath" class="form-control" />
        <span asp-validation-for="LogoPath" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>