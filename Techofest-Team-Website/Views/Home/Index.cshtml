@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "_Layout";
}

<!-- Hakkımızda Kısmı (Moved to top) -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-8 md:mb-0 md:pr-8">
                <h2 class="text-3xl font-bold mb-6">Techonefest Hakkında</h2>
                <p class="text-gray-600 mb-6">@ViewBag.AboutContent.Content</p>
                <a asp-controller="About" asp-action="Index" class="inline-flex items-center bg-primary text-white px-6 py-3 rounded-md text-lg font-medium hover:bg-secondary transition duration-300 shadow-md hover:shadow-lg">
                    Daha fazla bilgi
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </a>
            </div>
            <div class="md:w-1/2 md:pl-8">
                <div class="relative rounded-xl overflow-hidden shadow-xl">
                    <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c" alt="Takım Çalışması" class="w-full h-auto">
                    <div class="absolute inset-0 bg-primary bg-opacity-20"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Hizmetler Kısmı -->
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4">Uzmanlık Alanlarımız</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Teknolojinin tüm alanlarında yenilikçi çözümler sunuyoruz</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var service in ViewBag.Services)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
                    <div class="p-6">
                        <div class="w-16 h-16 bg-primary bg-opacity-10 rounded-full flex items-center justify-center mb-4">
                            <img src="@service.IconPath" alt="@service.Name" class="w-8 h-8">
                        </div>
                        <h3 class="text-xl font-bold mb-3">@service.Name</h3>
                        <p class="text-gray-600 mb-4">@service.Description</p>
                        <a asp-controller="Service" asp-action="Index" class="inline-flex items-center text-primary font-medium hover:text-secondary">
                            Detaylar
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-12">
            <a asp-controller="Service" asp-action="Index" class="inline-block bg-primary text-white px-8 py-3 rounded-md text-lg font-medium hover:bg-secondary transition duration-300 shadow-md hover:shadow-lg">
                Tüm Hizmetlerimiz
            </a>
        </div>
    </div>
</section>

<!-- Sponsorlar Kısmı -->
<section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4">Güvenilen Ortaklarımız</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Dünya çapında lider kuruluşlarla iş birliği yapıyoruz</p>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 items-center">
            @foreach (var sponsor in ViewBag.Sponsors)
            {
                <div class="p-4 flex justify-center hover:scale-105 transition duration-300">
                    <img src="@sponsor.LogoPath" alt="@sponsor.Name" class="h-16 object-contain opacity-70 hover:opacity-100 transition duration-300">
                </div>
            }
        </div>
    </div>
</section>

<!-- Takım Kısmı -->
<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold mb-4">Takımımız</h2>
            <p class="text-gray-600 max-w-2xl mx-auto">Alanında uzman ekibimizle birlikte projelere yön veriyoruz</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
            @foreach (var member in ViewBag.TeamMembers)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition duration-300 transform hover:-translate-y-2">
                    <div class="relative pb-48 overflow-hidden">
                        @if (!string.IsNullOrEmpty(member.ImagePath))
                        {
                            <img class="absolute inset-0 h-full w-full object-cover" src="@member.ImagePath" alt="@member.Name">
                        }
                        else
                        {
                            <div class="absolute inset-0 bg-gray-200 flex items-center justify-center">
                                <svg class="h-20 w-20 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                        }
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-1">@member.Name</h3>
                        @if (!string.IsNullOrEmpty(member.Role))
                        {
                            <p class="text-secondary font-medium mb-3">@member.Role</p>
                        }
                        @if (!string.IsNullOrEmpty(member.Bio))
                        {
                            <p class="text-gray-600 text-sm mb-4">@member.Bio</p>
                        }
                        <div class="flex justify-center space-x-4 pt-2">
                            <!-- Social media icons would go here if added to model -->
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-12">
            <a asp-controller="Team" asp-action="Index" class="inline-block bg-primary text-white px-8 py-3 rounded-md text-lg font-medium hover:bg-secondary transition duration-300 shadow-md hover:shadow-lg">
                Tüm Takımı Gör
            </a>
        </div>
    </div>
</section>

