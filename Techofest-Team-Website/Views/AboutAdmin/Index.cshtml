@model Techonefest_Team_Website.Models.About

@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "_AdminLayout"; // Ana sayfa için özel layout
}

<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-5 border-b border-gray-200">
            <div class="flex justify-between items-center">
                <h2 class="text-2xl font-bold text-gray-900">Hakkımızda Bilgileri</h2>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                        </svg>
                        Düzenle
                    </a>
                }
            </div>
        </div>
        
        <div class="px-6 py-4">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">@Model.Title</h3>
            <div class="prose max-w-none text-gray-600">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</div>