@model Techonefest_Team_Website.Models.TeamMember

@{
    ViewData["Title"] = "Takım Üyesi Düzenle";
}

<div class="container mt-4">
    <h2 class="mb-4">Takım Üyesi Düzenle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Role" class="form-label"></label>
            <input asp-for="Role" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ImagePath" class="form-label"></label>
            <input asp-for="ImagePath" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Bio" class="form-label"></label>
            <textarea asp-for="Bio" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>

