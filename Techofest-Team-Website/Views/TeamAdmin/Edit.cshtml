@model Techonefest_Team_Website.Models.TeamMember

@{
    ViewData["Title"] = "Takım Üyesi Düzenle";
    Layout = "_AdminLayout";
}

<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">@ViewData["Title"]</h2>
        
        <form asp-action="Edit" method="post" class="space-y-6">
            <input type="hidden" asp-for="Id" />
            
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700">Adı</label>
                <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm py-2 px-3 border">
                <span asp-validation-for="Name" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Role" class="block text-sm font-medium text-gray-700">Görevi</label>
                <input asp-for="Role" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm py-2 px-3 border">
                <span asp-validation-for="Role" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="ImagePath" class="block text-sm font-medium text-gray-700">Resim URL</label>
                <input asp-for="ImagePath" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm py-2 px-3 border">
                <span asp-validation-for="ImagePath" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Bio" class="block text-sm font-medium text-gray-700">Biyografi</label>
                <textarea asp-for="Bio" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary sm:text-sm py-2 px-3 border"></textarea>
                <span asp-validation-for="Bio" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div class="flex justify-end space-x-3">
                <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                    İptal
                </a>
                <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-secondary">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}