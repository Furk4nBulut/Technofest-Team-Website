@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "_AdminLayout"; // Layout sayfasını belirt
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Yönetim Paneli</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Stats Card 1 -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                    <i class="fas fa-users text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Takım Üyeleri</p>
                    <h3 class="text-2xl font-bold">24</h3>
                </div>
            </div>
        </div>
        
        <!-- Stats Card 2 -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-100 text-green-600 mr-4">
                    <i class="fas fa-handshake text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Sponsorlar</p>
                    <h3 class="text-2xl font-bold">12</h3>
                </div>
            </div>
        </div>
        
        <!-- Stats Card 3 -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-purple-100 text-purple-600 mr-4">
                    <i class="fas fa-cogs text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Hizmetler</p>
                    <h3 class="text-2xl font-bold">8</h3>
                </div>
            </div>
        </div>
        
        <!-- Stats Card 4 -->
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-100 text-yellow-600 mr-4">
                    <i class="fas fa-chart-line text-xl"></i>
                </div>
                <div>
                    <p class="text-gray-500">Ziyaretçiler</p>
                    <h3 class="text-2xl font-bold">1,245</h3>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">Hızlı Erişim</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a asp-controller="TeamAdmin" asp-action="Create" class="bg-blue-50 text-blue-600 p-4 rounded-lg text-center hover:bg-blue-100 transition duration-300">
                <i class="fas fa-user-plus text-2xl mb-2"></i>
                <p>Takım Ekle</p>
            </a>
            <a asp-controller="SponsorAdmin" asp-action="Create" class="bg-green-50 text-green-600 p-4 rounded-lg text-center hover:bg-green-100 transition duration-300">
                <i class="fas fa-handshake text-2xl mb-2"></i>
                <p>Sponsor Ekle</p>
            </a>
            <a asp-controller="ServiceAdmin" asp-action="Create" class="bg-purple-50 text-purple-600 p-4 rounded-lg text-center hover:bg-purple-100 transition duration-300">
                <i class="fas fa-plus-circle text-2xl mb-2"></i>
                <p>Hizmet Ekle</p>
            </a>
            <a asp-controller="AboutAdmin" asp-action="Edit" class="bg-yellow-50 text-yellow-600 p-4 rounded-lg text-center hover:bg-yellow-100 transition duration-300">
                <i class="fas fa-edit text-2xl mb-2"></i>
                <p>Hakkımızda Düzenle</p>
            </a>
        </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Son Aktiviteler</h2>
        <div class="space-y-4">
            <div class="flex items-start border-b pb-4">
                <div class="bg-blue-100 text-blue-600 p-2 rounded-full mr-4">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div>
                    <p class="font-medium">Yeni takım üyesi eklendi</p>
                    <p class="text-sm text-gray-500">2 saat önce</p>
                </div>
            </div>
            <div class="flex items-start border-b pb-4">
                <div class="bg-green-100 text-green-600 p-2 rounded-full mr-4">
                    <i class="fas fa-handshake"></i>
                </div>
                <div>
                    <p class="font-medium">Yeni sponsor eklendi</p>
                    <p class="text-sm text-gray-500">1 gün önce</p>
                </div>
            </div>
            <div class="flex items-start">
                <div class="bg-purple-100 text-purple-600 p-2 rounded-full mr-4">
                    <i class="fas fa-cogs"></i>
                </div>
                <div>
                    <p class="font-medium">Hizmet güncellendi</p>
                    <p class="text-sm text-gray-500">2 gün önce</p>
                </div>
            </div>
        </div>
    </div>
</div>