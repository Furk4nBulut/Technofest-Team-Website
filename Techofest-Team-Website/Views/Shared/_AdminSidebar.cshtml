            <div class="flex items-center">
                <div>
                    <img class="h-9 w-9 rounded-full" src="/images/user-avatar.png" alt="User avatar">
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-700">@User.Identity.Name</p>
                    <a asp-controller="Account" asp-action="Profile" class="text-xs font-medium text-primary hover:text-secondary">Profilini Gör</a>
