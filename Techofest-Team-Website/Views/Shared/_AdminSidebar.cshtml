        <!-- User Profile Section -->
        <div class="flex-shrink-0 flex border-t border-gray-200 p-4">
            <div class="flex items-center">
                <div>
                    <img class="h-8 w-auto" src="img/teknofest.webp" alt="Techonefest Logo">
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium text-gray-700">@User.Identity.Name</p>
                </div>
