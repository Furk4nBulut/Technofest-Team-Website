<script>
    // Mobile menu toggle
    document.getElementById('admin-mobile-menu-button')?.addEventListener('click', function() {
        const sidebar = document.getElementById('admin-mobile-sidebar');
        sidebar.classList.remove('hidden');
    });

    // Mobile menu close
    document.getElementById('mobile-sidebar-close')?.addEventListener('click', function() {
        const sidebar = document.getElementById('admin-mobile-sidebar');
        sidebar.classList.add('hidden');
    });

    // Close mobile sidebar when clicking outside
    document.querySelector('#admin-mobile-sidebar > div.fixed.inset-0')?.addEventListener('click', function() {
        const sidebar = document.getElementById('admin-mobile-sidebar');
        sidebar.classList.add('hidden');
    });
</script>

@functions {
    string GetNavItemClass(string controllerName)
    {
        return $"group flex items-center px-2 py-2 text-sm font-medium rounded-md {(ViewContext.RouteData.Values["Controller"].ToString() == controllerName ? "bg-gray-100 text-gray-900" : "text-gray-600 hover:bg-gray-50 hover:text-gray-900")}";
    }

    string GetNavIconClass(string controllerName)
    {
        return $"mr-3 h-6 w-6 {(ViewContext.RouteData.Values["Controller"].ToString() == controllerName ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500")}";
    }

    string GetMobileNavItemClass(string controllerName)
    {
        return $"group flex items-center px-2 py-2 text-base font-medium rounded-md {(ViewContext.RouteData.Values["Controller"].ToString() == controllerName ? "bg-gray-100 text-gray-900" : "text-gray-600 hover:bg-gray-50 hover:text-gray-900")}";
    }

    string GetMobileNavIconClass(string controllerName)
    {
        return $"mr-4 h-6 w-6 {(ViewContext.RouteData.Values["Controller"].ToString() == controllerName ? "text-gray-500" : "text-gray-400 group-hover:text-gray-500")}";
    }
}